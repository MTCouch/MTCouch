<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Form Alteração de usuarios</title>
</head>

<body>
    <%if(typeof usuarios[0] == "undefined"){%>
    <div class="erros">
        <%if(errosValidacao){%>
            <ul>
                <%for(var i=0; i<errosValidacao.length; i++) {%>
                    <li><%=errosValidacao[i].param%> - <%=errosValidacao[i].msg%></li>
                <%}%>
            </ul>
        <%}%>
    </div>
    <form action="/alteracao" method="POST">
        <div>
            <input type="text" id="id" name="id" value="<%=usuarios.id%>"/>
        </div>
        <div>
            <label for="nome">Nome:</label>
            <input type="text" id="nome" name="nome" value="<%=usuarios[0].nome%>" placeholder="Coloque o nome do usuario aqui" />
        </div>
        <div>
            <label for="senha">Senha:</label>
            <input type="text" id="preco" name="senha" value="<%=usuarios[0].senha%>" placeholder="Coloque o senha do usuario aqui" />
        </div>
        
        <input type="submit" value="alterar"/>
    </form>
    <%} else {%>
        <form action="/alteracao" method="POST">
            <div>
                <input type="text" id="id" name="id" value="<%=usuarios[0].id%>"/>
            </div>
            <div>
                <label for="nome">Nome:</label>
                <input type="text" id="nome" name="nome" value="<%=usuarios[0].nome%>" placeholder="Coloque o nome do usuario aqui" />
            </div>
            <div>
                <label for="senha">Senha:</label>
                <input type="text" id="preco" name="senha" value="<%=usuarios[0].senha%>" placeholder="Coloque o senha do usuario aqui" />
            </div>
            <input type="submit" value="alterar"/>
        </form>
    <%}%>
</body>

</html>